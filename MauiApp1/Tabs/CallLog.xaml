<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Tabs.CallLog"
             Title="Call Log"
             >
    <ScrollView>
    <VerticalStackLayout>

        <ImageButton
            Source="call_icon.png"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Aspect="AspectFit"
            HeightRequest="150"
            Margin="0,50"
            Clicked="ImageButton_Clicked"/>

        <Label 
            Text="Click to start a call"
            FontSize="30"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="Center" />

        <Label
            Text="Recents Calls (0)"
            Margin="50"
            FontSize="20"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="Start"
            TextDecorations="Underline"
            />
        <Label
            Text="No Call Data To Be Displayed :("
            Margin="50,0,0,0"
            FontSize="20"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="Start"
            />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>