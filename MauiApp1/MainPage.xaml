<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Welcome to BBM!" HorizontalOptions="Center" TextTransform="Uppercase"
                Style="{StaticResource Headline}"
                FontSize="Title"
                SemanticProperties.HeadingLevel="Level1" />
            
            <Image
                Source="bbm_dots.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="bbm welcome logo" />

            <Label
                Text="Sign in with your Blackberry ID." 
                FontSize="Medium"
                Style="{StaticResource Headline}"/>

            <Label
                 Text="If you do not have one, please create one below." 
                 FontSize="Medium"
                 Style="{StaticResource Headline}"/>

            <Label
                HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="" />
                        <Span Text="Learn more about Blackberry ID"
                        TextColor="Black"
                        TextDecorations="Underline">
                            
                            
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TapCommand}"
                                          CommandParameter="https://www.blackberry.com/us/en/support/bbid" />
                            </Span.GestureRecognizers>
                        </Span>
                        <Span Text="" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>


            <Label Text="Log In"
               FontSize="50"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

            <Entry Keyboard="Text"
               Placeholder="Enter Blackberry ID"
               VerticalOptions="CenterAndExpand" />

            <Entry Keyboard="Text"
               Placeholder="Enter password"
               IsPassword="True"
               VerticalOptions="CenterAndExpand" />

            <StackLayout 
                Spacing="500"
                Orientation="Horizontal"
                HorizontalOptions="CenterAndExpand" 
                VerticalOptions="CenterAndExpand"
                >

                <Button
                x:Name="SignInBtn"
                 Text="Sign In"
                 TextColor="Black"
                 SemanticProperties.Hint="Click to sign into blackberry ID"
                  Clicked="OnCounterClicked"
                  HorizontalOptions="Fill"
                  BorderColor="Black"
                  CornerRadius="100"
                  BorderWidth="1"
                  Background="Transparent"/>

                <Button
                x:Name="CreateIDBtn"
                Text="Create ID" 
                TextColor="Black"
                SemanticProperties.Hint="Click to create a blackberry ID"
                Clicked="CreateIDBtn_Clicked"   
                CornerRadius="100"
                HorizontalOptions="Fill"
                BorderColor="Black"
                BorderWidth="1"
                Background="Transparent"/>
            
                
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
